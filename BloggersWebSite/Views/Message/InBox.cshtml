@using EntityLayer.Concrete;
@model List<Message2>

@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Gelene Kutusu</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>       
        <th>Mesajı Gör</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageId</th>
            <td>@item.Subject</td>
            <td>@item.SenderUser.WriterName</td>
            <td>@(((DateTime)item.CreatedDate).ToString("dd-MMMM-yyyy"))</td>
            <td><a href="/Message/MessageDetails/@item.MessageId" class="btn btn-outline-success">Mesajı Gör</a></td>
        </tr>
    }
</table>
<a href="/Blog/Create" class="btn btn-primary">Yeni Mesaj Oluştur</a>

