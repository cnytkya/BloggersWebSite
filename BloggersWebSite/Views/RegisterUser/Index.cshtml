@model UserSignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Kullanıcı Kayıt Formu</title>

    <link href="~/admintema/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admintema/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/admintema/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/admintema/css/animate.css" rel="stylesheet">
    <link href="~/admintema/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">CK</h1>

            </div>
            <h3>Kayıt Ekranı</h3>
            <p>Yeni bir hesap oluştur.</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="@Model.NameSurname"></span>
                    <input type="text" class="form-control" placeholder="Adınız" asp-for="@Model.NameSurname">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.Mail"></span>
                    <input type="email" class="form-control" placeholder="Email" asp-for="@Model.Mail">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.UserName"></span>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="@Model.UserName">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.Password"></span>
                    <input type="password" class="form-control" placeholder="Şifre" asp-for="@Model.Password" required="">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.PasswordConfirm"></span>
                    <input type="password" class="form-control" placeholder="Şifre Tekrar" asp-for="@Model.PasswordConfirm" required="">
                </div>

                
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox" required=""><i></i> Tüm kuralları kabul ediyorum </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Zaten hesabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login">Giriş Yap</a>

                <div class="text-danger" asp-validation-summary="ModelOnly">

                </div>
            </form>
            <p class="m-t"> <small>Tüm haklar saklıdır. &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/admintema/js/jquery-3.1.1.min.js"></script>
    <script src="~/admintema/js/popper.min.js"></script>
    <script src="~/admintema/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/admintema/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>

