@model EntityLayer.Concrete.Blog

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Blog Ekleme Sayfası</h1>
<hr />
@using (Html.BeginForm("Create", "Blog", FormMethod.Post))
{
    @Html.Label("Başlık")
    @Html.TextBoxFor(x=>x.BlogTitle, new{ @class = "form-control"})
    @Html.ValidationMessageFor(x=>x.BlogTitle)
    <br />
    @Html.Label("Görsel")
    @Html.TextBoxFor(x=>x.BlogImage, new{ @class = "form-control"})
    @Html.ValidationMessageFor(x=>x.BlogImage)
    <br />
    @Html.Label("Küçük Görsel")
    @Html.TextBoxFor(x=>x.BlogThumbnailImage, new{ @class = "form-control"})
    <br />
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x=> x.CategoryId,(List<SelectListItem>)ViewBag.cv, new{@class = "form-control"})
    <br />
    <br />
    @Html.Label("Yazar")
    @Html.HiddenFor(x => x.WriterId) <!-- Yazar ID'sini gizli alan olarak ekledik -->
    @Html.DisplayFor(x => x.Writer.WriterName) <!-- Yazar adını gösteriyoruz, düzenleme yapmak isterseniz input kullanabilirsiniz -->
    <br />
    <br />
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="BlogStatus" /> @Html.DisplayNameFor(model => model.BlogStatus)
        </label>
    </div>
    <br />
    <br />
    @Html.Label("İçerik")
    @Html.TextAreaFor(x=>x.BlogTContent,15,3, new{ @class = "form-control"})
    @Html.ValidationMessageFor(x=>x.BlogTContent)
    <br />

    <button class="btn btn-info">Kaydet</button>
    <a asp-action="BlogListByWriter" class="btn btn-danger">İptal Et</a> <!-- İptal Et butonunu link olarak düzeltilmiş. -->
}
