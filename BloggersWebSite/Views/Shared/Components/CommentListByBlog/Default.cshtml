@model IEnumerable<EntityLayer.Concrete.Comment>

<h1>Yorumlar</h1>
<div class="comment-top">
    @foreach(var item in Model)
    {
        <div class="media">
            <img src="~/template/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <p>
                    @item.CommentContent
                </p>
            </div>
        </div>

    }
</div>