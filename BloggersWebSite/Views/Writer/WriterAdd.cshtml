@model BloggersWebSite.Models.AddWriterImageFile

@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Ekleme Sayfası</h4>
                <br>
                @Html.HiddenFor(x=>x.WriterId, new{@class = "form-control"})
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Adı Soyadı</label>
                        @Html.TextBoxFor(x=>x.WriterName, new{@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email Adresi</label>
                        @Html.TextBoxFor(x=>x.WriterMail, new{@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @Html.PasswordFor(x => x.WriterPassword, new {@class = "form-control"})
                    </div>

                   @* <div class="form-group">
                        <label for="exampleSelectGender">Cinsiyet</label>
                        <select class="form-control" id="exampleSelectGender">
                            <option>Erkek</option>
                            <option>Kız</option>
                        </select>
                    </div>*@
                    <div class="form-group">
                        <label>Dosya Yükle</label>
                        <input type="file" name="WriterImage" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputCity1">Şehir</label>
                        @Html.TextBoxFor(x=>x.Location, new{@class= "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        @Html.TextAreaFor(x=>x.WriterAbout,20,3, new{@class = "form-control"})
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">İptal Et</button>
                </div>
            </div>
        </div>
    </div>
</form>


